<div class="header">
<h1 class="white font big leftIndex">Genres</h1>

<h2 class="white font big rightIndex"><%= @user.name %></h2>
</div>

<div class="wrapper">
  <div id="inner">
<% @chatrooms.each do |chatroom| %>
<!--   <div class="col-sm-6 col-md-4"> -->
    <div class="column">
      <img src="<%=chatroom.image%>" alt="...">
      <div class="caption">
        <h3><%=chatroom.name%></h3>
        <p><%=chatroom.description%></p>
        <%= link_to "Chat Now!", chatroom_path(chatroom) %>
      </div>
    </div>
<% end %>
</div>
</div>
